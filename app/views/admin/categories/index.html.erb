<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Categories" %>
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Categories</h1>
    <%= link_to "New category", new_admin_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0 5 lg:mx-0">
      <div class="inline-block min-w-full py-2">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Name
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Description
                </th>
              </tr>
            </thead>
            <tbody>
              <% @admin_categories.each do |c| %>
                <tr class="border-b bg-gray-50">
                  <td class="px-6 py-4 text-sm font-medium text-gray-800 underline whitespace-nowrap">
                    <%= link_to c.name, edit_admin_category_path(c) %>
                  </td>
                  <td class="px-6 py-4 text-sm font-medium text-gray-800 whitespace-nowrap">
                    <%= c.description %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
